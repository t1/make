<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<packaging id="jar" version="1.0" unique="true">
    <name>Java-ARchive packaging</name>
    <description>Package Java classes and resources into a Zip with the file extension '.jar'</description>

    <activation>
        <folder>src/main/java</folder>
    </activation>

    <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
            <archive>
                <addMavenDescriptor>false</addMavenDescriptor>
                <manifest>
                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                    <Main-Class>com.github.t1.somemake.Main</Main-Class>
                </manifest>
            </archive>
        </configuration>
    </plugin>
</packaging>
